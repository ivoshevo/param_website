                    dev.to
                </a>]
                [<a href="https://medium.com/" target="_blank" rel="noopener noreferrer">
                    medium
                </a>]
            </div>
            <div class="grid-container-blog-div-1">
                <section style="display: flex; flex-direction: row; justify-content: space-between;">
                    <% data.forEach(d => { %>
                          <div class="card flex-car" style="width: 20rem; font-size:medium; margin-right: 10px;">
                            <img  src="wire.jpg" class="card-img-top" alt="...">
                            <div class="card-body">
                              <h5 class="card-title flex-car-text" style="font-size: medium;"><%= d.title%></h5>
                              <p class="card-text flex-car-text" style="font-size: small;" ><%= d.summary%></p>
                              <a href="/contentDetails/<%= d._id%>" class="btn btn-primary" style="font-size: x-small;">Read More</a>
                            </div>
                          </div>
                   <% })%>
                </section>
            </div>
        </section>
        <section class="section text-center">
