<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
        <title>Web Param | Edit</title>
        <link rel="icon" href="/favicon.ico" />
        <link rel="stylesheet" href="css_footer.css"/>
        <link rel="stylesheet" href="css_index.css"/>
        <link rel="stylesheet" href="css_partners.css"/>
        <link rel="stylesheet" href="css_content.css"/>
        <link rel="stylesheet" href="css_careers.css"/>
        <link rel="stylesheet" href="css_about.css"/>
        <link rel="stylesheet" href="css_main.css"/>
        <link rel="stylesheet" href="css_contact.css"/>
    </head>
<body>
    <%- include('./partials/nav.ejs') %>
    <div class="grid-container-AdminEdit">
        <section class="container">
            <h1 class="mb-4">Edit Content</h1>
            <form class="row g-3" action="/content" method="POST">
                <% contents.forEach( content => { %>
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" class="form-control" id="title" name="title" required placeholder="Title">
                  </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea class="form-control" id="description" name="description" placeholder="Content"></textarea>
                  </div>
                <div>
                    <a href="/content" class="btn btn-secondary">Cancle</a>
                    <button type="submit" class="btn btn-primary">Save Post</button>
                </div>
                <%} )%>
            </form> 
        </section>
    </div>
    <%- include('./partials/footer.ejs') %>
    <%- include('./partials/scripts.ejs') %>
</body>
</html>