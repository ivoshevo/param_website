<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head.ejs') %>
<body>
    
    <%- include('./partials/nav.ejs') %>
    <section class="section">
        <div class="grid-container-careers text-center">
            <div>
                <h2>Our Careers</h2>
                 <small><h5>team@webparam.co.za | Email us with your cv</h5></small>
                 <form class="row g-3">
                    <div>
                        <div class="mb-3 row">
                            <label for="staticEmail" class="col-sm-2 col-form-label" style="font-size: large;"><small>Name</small></label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Your Name">
                            </div>
                          </div>
                        <div class="mb-3 row">
                            <label for="staticEmail" class="col-sm-2 col-form-label" style="font-size: large;"><small>Email</small></label>
                            <div class="col-sm-10">
                                <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="Your Email">
                            </div>
                          </div>
                        <div class="mb-3 row">
                            <label for="staticEmail" class="col-sm-2 col-form-label" style="font-size: large;"><small>CV</small></label>
                            <div class="col-sm-10">
                                <input type="file" class="form-control" id="formFile">
                            </div>
                          </div>
                            <button type="button" class="btn btn-success" style="font-size: x-small;">Submit</button>
                    </div>
                  </form>
            </div>
        </div>
    </section>
    <%- include('./partials/footer.ejs') %>
    <%- include('./partials/scripts.ejs') %>
</body>
</html>